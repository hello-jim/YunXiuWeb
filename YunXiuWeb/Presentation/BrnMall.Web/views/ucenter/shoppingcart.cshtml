                            <th valign="bottom">商品id</th>
                            <th>商品名</th>
                            <th>商品价格</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var info in @Model.ShoppingCarts){
                        <tr>
                            <td><img src="@{@WorkContext.ImageCDN}/images/productImg/@info.Product.ImgName" width="50" height="50" /></td>
                            <td>
                                @info.Product.PID
                            </td>
                            
                            <td>
                                <div class="proList">
                                    <a href="@Url.Action("product", "catalog", new { pid = info.Product.PID, area = "" })">@info.Product.Name</a>
                                </div>
                                     </td>
                            <td>
                                @info.Product.ShopPrice
                            </td>
                            <td>
                            @Html.ActionLink("删除", "deletshoppingcart", new { PID = @info.Product.PID }, new { @class = "editOperate" })
