@{
    Layout = null;
}
@model BrnMall.Web.MallAdmin.models.RoleModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
</head>
<body>
    <div>
        <input type="hidden" name="rID" value="@Model.Role.RID" />
        角色名: <input type="text" name="rName" value="@Model.Role.RName" /><br />
        角色描述 <input type="text" name="describe" value="@Model.Role.Describe" /><br />
        <input type="button" name="role-permission-btn" value="角色权限" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal" />
        <input type="button" value="提交" class="edit-save" />
    </div>

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">角色权限</h4>
                </div>
                <div class="modal-body">
                    @foreach (var p in Model.Permissions)
                    {
                        if (Model.OwnPermissions.Where(o => o.PID == p.PID).Count() > 0)
                        {
                            <span> @p.PName</span><input type="checkbox" value="@p.PID" class="permission-select" checked />
                        }
                        else
                        {
                            <span> @p.PName</span><input type="checkbox" value="@p.PID" class="permission-select" />
                        }
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    <button type="button" class="btn btn-primary">提交更改</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal -->
    </div>
</body>
</html>

<script src="/admin_mall/scripts/jquery.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script src="/admin_mall/scripts/MallManage.js?v=2"></script>
