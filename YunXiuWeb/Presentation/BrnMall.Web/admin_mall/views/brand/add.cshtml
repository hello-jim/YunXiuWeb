@section body{
<h1 class="rightH1">
品牌管理 &gt;&gt; 添加品牌
<div class="right">
<a href="@Html.Raw(ViewData["referer"].ToString())" class="menuBT"><img src="/admin_mall/images/goback.jpg"/>返回列表</a>
<div class="clear"></div>
</div>
<div class="clear"></div>
</h1>

<form id="form1" method="post" enctype="multipart/form-data" action="/malladmin/brand/add">
    <div class="addTable">
        <table width="100%">
            <tr>
                <td width="76px" align="right">品牌名称：</td>
                <td>@Html.TextBoxFor(x => x.BrandName, new { @class = "input", size = "35" })@Html.ValidationMessageFor(x => x.BrandName)</td>
            </tr>
            <tr>
                <td align="right">品牌Logo：</td>
                <td>
                    <div class="upload">
                        <div class="left">
                            <div><input id="fileID" name="fileID" type="file" value="上传" />@Html.ValidationMessageFor(x => x.Logo)</div>
                        </div>
                        <div class="clear"></div>
                    </div>
                </td>
            </tr>
            <tr>
                <td align="right">排序：</td>
                <td>@Html.TextBoxFor(x => x.DisplayOrder, new { @class = "input", size = "3" })@Html.ValidationMessageFor(x => x.DisplayOrder)</td>
            </tr>

            <tr>
                <td align="right">标签：</td>
                <td>
                    <p>
                        <label>@Html.CheckBoxFor(x => x.IsHotBrand, new { @class = "checkbox" })热门</label>
                    </p>
                </td>
            </tr>
            <tr>
                <td align="right">
                    商品分类：
                </td>
                <td>
                    <div id="Categorys" class="selectBt" style="float: left;">
                        <input value="选择分类" onclick="openCategorySelectLayer(this)" type="button">
                        <input class="CateId" id="CateId" name="CateId" value="-1" type="hidden">
                        <input class="CategoryName" id="CategoryName" name="CategoryName" value="选择分类" type="hidden">
                    </div>
                </td>
            </tr>

            <tr>
                <td align="right">&nbsp;</td>
                <td>
                    <a href="" class="addBt" id="sumbitBut"><img src="/admin_mall/images/submit.jpg" /></a>
                    <script type="text/javascript">
                        $(function () {
                            $("#sumbitBut").click(function () {
                                $("form:first").submit();
                                return false;
                            })
                        });
                    </script>
                </td>
            </tr>
            <tr>
                <td align="right">&nbsp;</td>
                <td>&nbsp;</td>
            </tr>
        </table>
    </div>
 </form>
}
